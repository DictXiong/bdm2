\newcommand{\bdlim}[2]{\lim\limits_{#1\to #2}}
\newcommand{\bdsum}[2]{\sum\limits_{#1}^{#2}}
\newcommand{\bdprod}[2]{\prod\limits_{#1}^{#2}}

